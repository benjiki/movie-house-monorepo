{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["packages/*/src"]
    },
    "types": ["node", "express"]
  },
  "include": ["apps/**/*", "packages/**/*", "types/**/*"]
}
